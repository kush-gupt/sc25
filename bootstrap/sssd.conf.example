# SSSD Configuration for Slurm Login Service
# This is a minimal example for local testing/development

[sssd]
services = nss, pam, ssh
config_file_version = 2
domains = LOCAL

# Enable debug logging
debug_level = 6

[nss]
filter_groups = root
filter_users = root

[pam]
offline_credentials_expiration = 2
offline_failed_login_attempts = 3

[domain/LOCAL]
# Local domain for testing
id_provider = files
auth_provider = proxy
proxy_pam_target = sssd-shadowutils
proxy_fast_alias = True

# Enable local user enumeration
enumerate = True
cache_credentials = True

# User/Group ID range
min_id = 1000
max_id = 60000

